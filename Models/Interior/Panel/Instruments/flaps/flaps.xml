<?xml version="1.0" encoding="UTF-8"?>

<!-- Based on Jentron's works. Thanks to him -->

<PropertyList>

  <path>flaps.ac</path>

  <animation>
    <object-name>base</object-name>
    <object-name>guard</object-name>
    <object-name>switch</object-name>
    <object-name>light-cruise</object-name>
    <object-name>light-to</object-name>
    <object-name>light-ldg</object-name>
    <object-name>light-cruise-off</object-name>
    <object-name>light-to-off</object-name>
    <object-name>light-ldg-off</object-name>
    <object-name>flaps-up</object-name>
    <object-name>flaps-down</object-name>
  </animation>


  <animation>
    <type>material</type>
    <object-name>light-cruise</object-name>
    <emission>
      <red>   0.133 </red>
      <green> 0.855 </green>
      <blue>  0.145 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light-ldg</object-name>
    <object-name>light-to</object-name>
    <emission>
      <red>   1.000 </red>
      <green> 1.000 </green>
      <blue>  0.165 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light-cruise</object-name>
    <condition>
      <less-than>
        <property>/controls/flight/flaps</property>
        <value>0.373</value>
      </less-than>
    </condition> 
  </animation>

  <animation>
    <type>select</type>
    <object-name>light-to</object-name>
    <condition>
      <and>
        <greater-than> 
          <property>/controls/flight/flaps</property>
          <value>0.002</value>
        </greater-than> 
        <less-than>
          <value>0.998</value>
          <property>/controls/flight/flaps</property>
        </less-than>
      </and>
    </condition> 
  </animation>

  <animation>
    <type>select</type>
    <object-name>light-ldg</object-name>
    <condition>
      <greater-than> 
        <property>/controls/flight/flaps</property>
        <value>0.377</value>
      </greater-than> 
    </condition> 
  </animation>

  <animation>
    <type>translate</type>
    <object-name>switch</object-name>
    <property>/controls/flight/flaps</property>
    <interpolation>
      <entry><ind> 0.000 </ind><dep>  0.00 </dep></entry>
      <entry><ind> 0.375 </ind><dep> -0.01 </dep></entry>
      <entry><ind> 1.000 </ind><dep> -0.02 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>flaps.Down</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>flaps.Up</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(-1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
  </animation>

</PropertyList>

